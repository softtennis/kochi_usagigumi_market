.sessions-top
  = image_tag 'material/logo/logo.png', size: "200x100", alt: "test" ,class: "icon1"
  .sessions-middle
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .middle-top
        %p アカウントをお持ちでない方はこちら
        = link_to "新規会員登録", new_registration_path(resource_name), class: "registration-button"
      .middle-bottom
        .field
          = f.label :"Eメール", class: "mail"
          %br/
          = f.email_field :email, autofocus: true, autocomplete: "email"
        .field
          = f.label :"パスワード(7文字以上)", class: "password"
          %br/
          = f.password_field :password, autocomplete: "current-password"
          %br/
        .actions
          = f.submit "ログイン", class: "login-button"
        - if devise_mapping.rememberable?
          -# .field
          -#   = f.check_box :remember_me
          -#   = f.label :remember_me
        = render "devise/shared/links"
  = image_tag src='material/logo/logo-white.png', size: "200x100", alt: "test",class:"icon2"
